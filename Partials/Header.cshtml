<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet" />
  <title>DREAM BRIDGE</title>
</head>

<body class="">

  <!-- Phần Hotline -->
  <div class="border-b border-gray-300 bg-white pr-4">
    <div class="container mx-auto flex items-center justify-end gap-3 p-3">
      <!-- Thêm phần đăng nhập -->
      <a href="/login">
        <div class="ml-5">
          <button class=" border border-black text-black font-bold py-2 px-4 rounded">
            Đăng nhập
          </button>
        </div>
      </a>
      <div class="mt-1">
        <img class="w-8" src="https://classic.vn/wp-content/uploads/2022/07/phone-icon-800x800.png" alt="Phone Icon" />
      </div>
      <div>
        <h4 class="text-xl font-bold">DREAM BRIDGE</h4>
        <p>Hotline: <span class="text-red-500">083 8686 8686</span></p>
      </div>

    </div>
  </div>


  <!-- Phần Logo và Menu -->
  <div class="bg-white">
    <div class="container mx-auto flex items-center justify-between">
      <!-- Logo -->
      <div class="logo">
        <img class="w-36" src="~/Images/Vanguard.png" alt="Logo" />
      </div>

      <!-- Menu -->
      <div class="menu ">
        <ul class="flex gap-7 text-lg font-medium pr-5 pb-7">
          <li><a class="transition hover:text-blue-500" href="/home">TRANG CHỦ</a></li>
          <li><a class="transition hover:text-blue-500" href="/vechungtoi">VỀ CHÚNG TÔI</a></li>
          <div class="relative group">
            <a href="/duhoc" class="text-lg text-black transition hover:text-blue-500 " id="duhoc-link">DU
              HỌC</a>

            <!-- Bảng danh sách du học sẽ hiển thị khi di chuột -->
            <div class=" absolute hidden  bg-gray-100 group-hover:block p-5 z-10 items-center "
              style="left:-45px; top:40px;width: 153px" id="duhoc-list">
              <table class="mx-auto w-full table-auto ">
                <tbody>
                  <tr class="flex flex-col w-full ">
                    <td class="p-2 w-full text-center text-lg hover:bg-gray-300 cursor-pointer">Du học Mỹ</td>
                    <td class="p-2 w-full  text-center text-lg hover:bg-gray-300 cursor-pointer">Du học Anh</td>
                    <td class="p-2 w-full text-center text-lg hover:bg-gray-300 cursor-pointer">Du học Úc</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="relative group">
            <a href="/dichvu" class="text-lg text-black transition hover:text-blue-500 " id="tuvan-link">Dịch Vụ</a>
            <!-- Bảng danh sách du học sẽ hiển thị khi di chuột -->
            <div class=" absolute hidden  bg-gray-100 group-hover:block p-5 z-10 items-center "
              style="left:-55px; top:40px;width: 180px" id="tuvan-list">
              <table class="mx-auto w-full table-auto ">
                <tbody>
                  <tr class="flex flex-col w-full ">
                    <td class="p-2 w-full text-center text-lg hover:bg-gray-300 cursor-pointer">Tư vấn du học</td>
                    <td class="p-2 w-full  text-center text-lg hover:bg-gray-300 cursor-pointer">Tư vấn Visa</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <li><a class="transition hover:text-blue-500" href="">TÌM TRƯỜNG</a></li>
          <li><a class="transition hover:text-blue-500" href="">TIN TỨC</a></li>
          <li><a class="transition hover:text-blue-500" href="lienhe">LIÊN HỆ</a></li>
          <li style="margin-top: -5px;">
            <form class="flex items-center">
              <input type="text" placeholder="Tìm kiếm..."
                class="border rounded-l px-3 py-1 focus:outline-none focus:ring focus:ring-blue-300">
              <button class="bg-blue-500 text-white px-3 py-1 rounded-r hover:bg-blue-600 transition">Tìm</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </div>
</body>
<script>
  // Lấy các phần tử
  const duhocLink = document.getElementById('duhoc-link');
  const duhocList = document.getElementById('duhoc-list');
  const tuvanLink = document.getElementById('tuvan-link');
  const tuvanList = document.getElementById('tuvan-list');

  // Thêm sự kiện 'mouseenter' để hiển thị danh sách
  duhocLink.addEventListener('mouseenter', () => {
    duhocList.classList.remove('hidden'); // Hiển thị danh sách
  });

  // Thêm sự kiện 'mouseleave' để ẩn danh sách khi chuột rời khỏi liên kết
  duhocLink.addEventListener('mouseleave', () => {
    duhocList.classList.add('hidden'); // Ẩn danh sách
  });

  // Thêm sự kiện 'mouseenter' để hiển thị danh sách
  tuvanLink.addEventListener('mouseenter', () => {
    tuvanList.classList.remove('hidden'); // Hiển thị danh sách
  });

  // Thêm sự kiện 'mouseleave' để ẩn danh sách khi chuột rời khỏi liên kết
  tuvanLink.addEventListener('mouseleave', () => {
    tuvanList.classList.add('hidden'); // Ẩn danh sách
  });

</script>

</html>

    <script>
        const links = document.querySelectorAll('a');

        links.forEach(link => {
            link.addEventListener('click', function () {
                links.forEach(l => l.classList.remove('active')); // Xóa màu nền của tất cả các thẻ a
                this.classList.add('active'); // Thêm màu nền cho thẻ a được nhấn
            });
        });

        const addIcon = document.getElementById('addIcon');
        const editIcons = document.querySelectorAll('.editIcon'); // Lấy tất cả các icon sửa
        const overlay = document.getElementById('overlay');
        const closeModal = document.getElementById('closeModal');

        // Hiển thị modal khi nhấn vào dấu cộng
        addIcon.addEventListener('click', function () {
            overlay.style.display = 'flex'; // Hiển thị div overlay dưới dạng flexbox
        });

        // Ẩn modal khi nhấn nút đóng
        closeModal.addEventListener('click', function () {
            overlay.style.display = 'none'; // Ẩn div overlay
        });
        // Hiển thị modal khi nhấn vào các icon sửa
        editIcons.forEach(icon => {
            icon.addEventListener('click', function () {
                overlay.style.display = 'flex'; // Hiển thị div overlay khi nhấn vào icon sửa
            });
        });

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const cards = document.querySelectorAll('.school-card'); // Lấy tất cả các thẻ
        const viewMoreBtn = document.getElementById('view-more-btn');

        // Ẩn tất cả các thẻ sau thẻ thứ 6
        if (cards.length > 6) {
            cards.forEach((card, index) => {
                if (index >= 6) {
                    card.classList.add('hidden'); // Thêm class hidden để ẩn các thẻ
                }
            });
        }

        // Xử lý sự kiện khi nhấn vào nút "Xem thêm"
        viewMoreBtn.addEventListener('click', () => {
            cards.forEach((card) => {
                card.classList.remove('hidden'); // Hiển thị tất cả các thẻ
            });
            viewMoreBtn.style.display = 'none'; // Ẩn nút sau khi hiển thị tất cả thẻ
        });

        // Thêm chức năng cho dropdown chọn quốc gia và tỉnh/thành phố
        const countrySelect = document.getElementById('country');
        const citySelect = document.getElementById('city');

        const citiesByCountry = {
            USA: ['California', 'Hawaii', 'New York', 'Texas'],
            Australia: ['Sydney', 'Melbourne', 'Brisbane', 'Perth'],
            Switzerland: ['Zurich', 'Geneva', 'Bern', 'Basel'],
            Singapore: ['Central Region', 'North Region', 'East Region']
        };

        countrySelect.addEventListener('change', function () {
            const selectedCountry = this.value;
            citySelect.innerHTML = ''; // Xóa các tùy chọn cũ

            if (selectedCountry) {
                const cities = citiesByCountry[selectedCountry];
                cities.forEach(city => {
                    const option = document.createElement('option');
                    option.value = city;
                    option.textContent = city;
                    citySelect.appendChild(option);
                });
            }

            // Đặt giá trị mặc định cho dropdown thành phố
            citySelect.insertAdjacentHTML('afterbegin', '<option value="">-- Chọn tỉnh/thành phố --</option>');
            citySelect.value = ''; // Đặt giá trị mặc định cho dropdown thành phố
        });
    });
</script>

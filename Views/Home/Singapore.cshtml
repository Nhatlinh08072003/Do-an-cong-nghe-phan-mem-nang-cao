    <script>
        // Lấy các phần tử nội dung
        const tongQuan = document.getElementById('tong-quan');
        const hocBongUc = document.getElementById('hoc-bong-uc');
        const tinTucUc = document.getElementById('tin-tuc-uc');

        // Lấy các tab li
        const overviewTab = document.getElementById('overview-tab');
        const australiaScholarshipTab = document.getElementById('australia-scholarship-tab');
        const australiaNewsTab = document.getElementById('australia-news-tab');

        const cards = document.querySelectorAll('school-card'); // Sửa lại đây
        const viewMoreBtn = document.getElementById('view-more-btn');

        // Hàm hiển thị nội dung
        function showContent() {
            // Hiển thị nội dung Tổng quan và ẩn các nội dung khác
            tongQuan.classList.remove('hidden');
            hocBongUc.classList.add('hidden');
            tinTucUc.classList.add('hidden');
        }

        // Khi nhấp vào Tổng quan
        overviewTab.addEventListener('click', function () {
            showContent();
        });

        // Khi nhấp vào Học bổng Úc
        australiaScholarshipTab.addEventListener('click', function () {
            hocBongUc.classList.remove('hidden');
            tongQuan.classList.add('hidden');
            tinTucUc.classList.add('hidden');
        });

        // Khi nhấp vào Tin tức Úc
        australiaNewsTab.addEventListener('click', function () {
            tinTucUc.classList.remove('hidden');
            tongQuan.classList.add('hidden');
            hocBongUc.classList.add('hidden');
        });

        // Hiển thị phần Tổng quan khi trang được tải
        window.onload = function () {
            showContent();

            // Ẩn tất cả các thẻ sau thẻ thứ 6
            if (cards.length > 6) {
                cards.forEach((card, index) => {
                    if (index >= 6) {
                        card.classList.add('hidden'); // Thêm class hidden để ẩn các thẻ
                    }
                });
            }
        };

        // Xử lý sự kiện khi nhấn vào nút "Xem thêm"
        viewMoreBtn.addEventListener('click', () => {
            cards.forEach((card) => {
                card.classList.remove('hidden'); // Hiển thị tất cả các thẻ
            });
            viewMoreBtn.style.display = 'none'; // Ẩn nút sau khi hiển thị tất cả thẻ
        });
    </script>
